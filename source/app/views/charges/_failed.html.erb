

<table cellpadding="0" cellspacing="0" border="0"  id="tbl-failed" class="table table-bordered ">
	<thead>
		<th>Customer Name</th>
		<th>Amount</th>
		<th>Date</th>
		<th>Transaction Status</th>
	</thead>
	<tbody>
		<% @charges.failed.each do |fc|%>
		<tr>
			<td><%= fc.customer.formal_name %></td>
			<td><%= number_to_currency(fc.amount, :unit => "$") %></td>
			<td><%= Time.at(fc.created).strftime("%b %d, %Y")%></td>
			<td style="font-weight: bold;color:#fff;">Failed</td>
		</tr>
		<% end %>
		
	</tbody>
</table>

